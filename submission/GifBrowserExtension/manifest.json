{
  "manifest_version": 3,
  "name": "GIF Description Browser Extension",
  "description": "Detect GIFs on the page and send them to the caption service.",
  "version": "1.0.0",

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "GIF Description Extension"
  },

  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "detection.js",
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}